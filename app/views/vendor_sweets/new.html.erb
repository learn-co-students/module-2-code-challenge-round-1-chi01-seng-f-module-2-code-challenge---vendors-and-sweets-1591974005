<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>


<%=form_for @vendor_sweet do |f|%>
  <%= f.label "Sweet" %>
  <%= f.collection_select :sweet_id, Sweet.all, :id, :name %>
  <%= f.label "Vendor" %>
  <%= f.collection_select :vendor_id, Vendor.all, :id, :name %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.submit %>


<%end%>
